<% layout("/layouts/boilerplate") %>

<body>
  <h3>All Listings</h3>

  <div class="row">
    <% for(let listing of allListings) { %>
      <!-- Each card should be inside a 'col' to be responsive -->
      <div class="col-md-4 mb-4"> <!-- 'mb-4' adds some margin at the bottom -->
        <!-- Move <a> tag to wrap the entire card -->
        <a href="/listings/<%= listing._id %>" class="listing-link" style="text-decoration: none;">
          <div class="card">
            <img src="<%= listing.image %>" class="card-img-top" alt="listing-image" style="height:20rem">
            <div class="card-body">
              <p class="card-title"><b><%= listing.title %></b></p>
              <p class="card-text">&#8377; <%= listing.price %> /night</p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</body>
